[alias]
  a  = add -p
  ap = add -p
  s  = status -sb
  st = status -sb
  ci = commit -v
  co = checkout
  cp = checkout -p
  br = branch
  d  = diff
  di = diff
  dif= diff
  ds = diff --stat
  dc = diff --cached
  pr = pull --rebase
  ps = push
  rc = rebase --continue
  ri = rebase --interactive
  rcontinue = rebase --continue
  rs = rebase --skip
  rskip = rebase --skip
  rabort = rebase --abort
  oneline = log --pretty=oneline --since='2 days ago' --abbrev-commit
  onelog = log -p -1 --abbrev-commit
  l    = log --graph --oneline --abbrev-commit --decorate --all
  l1   = log --graph --oneline --abbrev-commit --decorate --all -1
  l2   = log --graph --oneline --abbrev-commit --decorate --all -2
  l3   = log --graph --oneline --abbrev-commit --decorate --all -3
  l4   = log --graph --oneline --abbrev-commit --decorate --all -4
  l5   = log --graph --oneline --abbrev-commit --decorate --all -5
  l6   = log --graph --oneline --abbrev-commit --decorate --all -6
  l7   = log --graph --oneline --abbrev-commit --decorate --all -7
  l8   = log --graph --oneline --abbrev-commit --decorate --all -8
  l9   = log --graph --oneline --abbrev-commit --decorate --all -9
  glog = log --graph --oneline --abbrev-commit --decorate --all --pretty='%Cgreen%h%Creset %Cred%cr%Creset %s %Cgreen<%aN>%Creset'
  recover = reset --hard
  unstage = reset HEAD --
  last = log -1 HEAD

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all

